{
    "compilerOptions": {
	/* Visit https://aka.ms/tsconfig.json to read more about this file */
	"target": "es2019",                                  
	"experimentalDecorators": true,                   
	"module": "es2015",
	"moduleResolution": "node",  
	"baseUrl": "./src",
	"typeRoots": [
	    "node_modules/@types",
	    "src/types"
	],
	"sourceMap": true,
	"esModuleInterop": true,
	"forceConsistentCasingInFileNames": true,
	"strict": true,
	"skipLibCheck": true
    }
}
